{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "./dist",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./features/step_definitions/**/*",
    "./features/support/**/*",
    "./typechain-types"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "exclude": [
    "./test/**/*",
    "./typechain-types/**/*.d.ts"
  ]
}
